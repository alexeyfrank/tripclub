#left-area

  .entry.post.clearfix
    .post-thumbnail
      %img.post-thumb{alt: @idea.title, height: "186", src: @idea.preview_img_url, width: "186"}/
      %span.post-overlay
    %p= @idea.content.html_safe

  - if @idea.images.any?
    #multi-media-bar
      #et-multi-media.clearfix
        %a#left-multi-media{href: "#"} Prev
        %a#right-multi-media{href: "#", next: ""}
        #media-slides
          .media-slide
            - @idea.images.each do |img|
              .thumb
                %a.fancybox{href: img.file_url, rel: "media", title: img.title }
                  %img.multi-media-image{alt: img.title, height: "48", src: img.file.thumb.url, width: "48"}/
                  %span.more
                .media-description
                  %p= img.title
                  %span.media-arrow

